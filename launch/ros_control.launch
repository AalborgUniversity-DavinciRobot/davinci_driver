<launch>
    <!-- Launch the empty driver -->
    <node name="empty_davinci" type="empty_davinci_node" pkg="davinci_driver" output="screen" ns="davinci"/>

    <!-- Load joint controller configurations from YAML file to parameter server -->
    <rosparam
        command="load"
        file="$(find davinci_driver)/config/davinci_control.yaml"
    />

    <!-- load the controllers -->
    <node
        name="controller_spawner_joint_state_controller"
        pkg="controller_manager"
        type="spawner"
        respawn="false"
        output="screen"
        ns="davinci"
        args="joint_state_controller"
    />

    <node
        name="controller_spawner_position_controller"
        pkg="controller_manager"
        type="spawner"
        respawn="false"
        output="screen"
        ns="davinci"
        args="joint_position_controller"
    />

 </launch>